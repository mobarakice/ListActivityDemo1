<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AvocadoGreen"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Founder of BARD"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/AztechPurple" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/AvocadoGreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_founder_pic"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/hamidkhan"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/VenomGreen" />

            <WebView
                android:id="@+id/wv_founder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp">

            </WebView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
